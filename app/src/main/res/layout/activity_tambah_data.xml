<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahData"
    android:backgroundTint="@color/design_default_color_background">

    <ImageView
        android:id="@+id/R_img_1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/wonderfulindonesia" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_kembali" />

    <TextView
        android:id="@+id/R_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/R_img_1"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:text="Tambah Data"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/lnly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/R_txt_1"
        android:orientation="vertical"
        android:padding="25dp">

        <TextView
            android:id="@+id/R_txt_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="10dp"
            android:text="ID Wisata"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editID"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/gray"
            android:fontFamily="@font/poppinsregular"
            android:hint="ID Wisata"
            android:inputType="number"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/R_txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Nama Wisata"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editNama"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/gray"
            android:fontFamily="@font/poppinsregular"
            android:hint="Nama Wisata"
            android:inputType="text"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/R_txt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Sejarah Wisata"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/gray"
            android:fontFamily="@font/poppinsregular"
            android:hint="Sejarah Wisata"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/R_txt_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Fasilitas Wisata"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editkatasandi"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/gray"
            android:fontFamily="@font/poppinsregular"
            android:hint="Fasilitas Wisata"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/R_txt_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Lokasi Wisata"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/editulangikatasandi"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/gray"
            android:fontFamily="@font/poppinsregular"
            android:hint="Lokasi Wisata"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_daftar"
        android:layout_width="352dp"
        android:layout_height="53dp"
        android:layout_below="@id/lnly_1"
        android:layout_centerHorizontal="true"
        android:width="390dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Tambah"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
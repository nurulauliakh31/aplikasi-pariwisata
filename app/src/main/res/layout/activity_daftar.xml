<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Daftar"
    android:backgroundTint="@color/design_default_color_background">

    <ImageView
        android:id="@+id/R_img_1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/wonderfulindonesia" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_kembali" />

    <TextView
        android:id="@+id/R_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/R_img_1"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:text="Form Daftar"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/lnly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/R_txt_1"
        android:orientation="vertical"
        android:padding="25dp">

        <EditText
            android:id="@+id/editNama"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/gray"
            android:fontFamily="@font/poppinsregular"
            android:hint="Nama Lengkap"
            android:inputType="text"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/gray"
            android:fontFamily="@font/poppinsregular"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/editkatasandi"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/gray"
            android:fontFamily="@font/poppinsregular"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/editulangikatasandi"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/gray"
            android:fontFamily="@font/poppinsregular"
            android:hint="Ulangi Kata Sandi"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/R_txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="10dp"
            android:text="Dengan mendaftar anda setuju dengan ketentuan dan syarat"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_daftar"
        android:layout_width="352dp"
        android:layout_height="53dp"
        android:layout_below="@id/lnly_1"
        android:layout_centerHorizontal="true"
        android:width="390dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Daftar"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/R_txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_daftar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsregular"
        android:text="- Atau -"
        android:textSize="15dp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="352dp"
        android:layout_height="53dp"
        android:layout_below="@id/R_txt_3"
        android:layout_centerHorizontal="true"
        android:width="390dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Masuk Sekarang"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>
</RelativeLayout>